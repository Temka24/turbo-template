{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@repo/types": ["../../packages/types/src"],
            "@repo/validation": ["../../packages/validation/src"],
            "src/*": ["src/*"],
            "*": ["node_modules/*"]
        }
    },
    "tsc-alias": {
        "replacers": {
            "base-url": {
                "enabled": true
            },
            "paths": {
                "enabled": true
            }
        }
    },
    "include": ["src"],
    "exclude": ["test", "**/*spec.ts"]
}
